<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.more.MoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_half_rounded2">

        <TextView
            android:id="@+id/account_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_black"
            android:text="Account Profile"
            android:textColor="@color/dark_late_gray"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/my_account"

            android:layout_below="@id/account_profile"
            android:layout_marginTop="30dp"

            android:orientation="horizontal"
            android:background="@color/white_smoke">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="My Account"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"

                android:textSize="25sp"
                android:fontFamily="@font/nunito_black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:id="@+id/help"

            android:layout_below="@id/my_account"
            android:layout_marginTop="30dp"

            android:orientation="horizontal"
            android:background="@color/white_smoke">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Help"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/nunito_black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/contactUs"

            android:layout_below="@id/help"
            android:layout_marginTop="30dp"

            android:orientation="horizontal"
            android:background="@color/white_smoke">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Contact Us"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/nunito_black"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/logOut"

            android:layout_below="@id/contactUs"
            android:layout_marginTop="30dp"

            android:orientation="horizontal"
            android:background="@color/white_smoke">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"

                android:src="@drawable/ic_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Sign Out"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:fontFamily="@font/nunito_black"/>



        </LinearLayout>






    </RelativeLayout>





</FrameLayout>