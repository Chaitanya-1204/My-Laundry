<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mylaundry">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyLaundry">
        <activity android:name=".CustomerOrderHistory"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".CutomerOrderDetail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".LaundryPerson.OrderHistoryDetail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity android:name=".LaundryPerson.OrderDetail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <activity android:name=".CustomerContactUs"
            android:theme="@style/Theme.Design.NoActionBar"/>
        <activity android:name=".CustomerFaq"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".LaundryPerson.AddOrder"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".LaundryPerson.LaundryContactUs"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".LaundryPerson.LaundryFaq"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".LaundryPerson.LaundryMyAccount"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".LaundryPerson.LaundryMainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".otpVerification"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyAccount"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.Design.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>